<div class="jcr-content">
  <div class="container">
    <h1 class="h3 mb-4">Avatars</h1>
    <div class="row">
      <div class="col-lg-6">
        <p class="mb-3">
          <a class="btn btn-sm jcr-btn--primary jcr-btn-sm--primary" href="/admin/avatars/new">
            Add New Avatar
          </a>
        </p>
        <div class="mb-5">
          <table class="table table-bordered jcr-table">
            <thead>
              <tr class="row jcr-row">
                <th class="col-6 col-md-8">
                  Avatar
                </th>
                <th class="col-6 col-md-4 text-center">
                  Options
                </th>
              </tr>
            </thead>
            <tbody>
              {{#each avatars}}
                <tr class="row jcr-row">
                  <td class="col-6 col-md-8">
                    <a href="/admin/avatars/{{id}}/edit">
                      <img class="jcr-avatar mr-3" src="/images/avatars/{{image}}" alt="">
                      {{image}}
                    </a>
                  </td>
                  <td class="col-6 col-md-4 text-center">
                    <a class="btn btn-sm btn-warning" href="/admin/avatars/{{id}}/edit">
                      Edit
                    </a>
                    <form
                      action="/admin/avatars/{{id}}/delete"
                      class="d-inline-block ml-3"
                      data-form-delete="Are you sure you want to delete this avatar?"
                      method="post"
                    >
                      <button class="btn btn-danger btn-sm" type="submit">
                        Delete
                      </button>
                    </form>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
