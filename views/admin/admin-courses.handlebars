<div class="jcr-content">
  <div class="container">
    <h1 class="h3 mb-4">Courses</h1>
    <p class="mb-3">
      <a class="btn btn-sm jcr-btn--primary jcr-btn-sm--primary" href="/admin/courses/new">
        Add New Course
      </a>
    </p>
    <table class="jcr-table mb-5 table table-bordered">
      <thead>
        <tr class="row jcr-row">
          <th class="col-6 col-md-9">
            Course
          </th>
          <th class="col-6 col-md-3 text-center">
            Options
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
          <tr class="row jcr-row">
            <td class="col-6 col-md-9">
              <a href="/admin/courses/{{id}}/edit">{{subject}}: {{name}}</a>
            </td>
            <td class="col-6 col-md-3 text-center">
              <a class="btn btn-sm btn-warning" href="/admin/courses/{{id}}/edit">
                Edit
              </a>
              <form
                action="/admin/courses/{{id}}/delete"
                class="d-inline-block ml-3"
                data-form-delete="Are you sure you want to delete this course?"
                method="post"
              >
                <button class="btn btn-danger btn-sm" type="submit">
                  Delete
                </button>
              </form>
              <a class="btn btn-sm btn-success text-white ml-3" href="/admin/courses/{{id}}/preview" target="_blank">
                Preview
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
