<form action="{{action}}" method="post">
  {{#if alert}}
    <p class="alert alert-danger">{{alert}}</p>
  {{/if}}
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" id="name" name="name" type="text" value="{{course.name}}">
      </div>
      <div class="form-group">
        <label for="subject">Subject</label>
        <select class="form-control" id="subject" name="subject">
          <option value="Music History" {{#if (eq course.subject "Music History")}}selected{{/if}}>
            Music History
          </option>
          <option value="Music Theory" {{#if (eq course.subject "Music Theory")}}selected{{/if}}>
            Music Theory
          </option>
          <option value="Practice" {{#if (eq course.subject "Practice")}}selected{{/if}}>
            Practice
          </option>
        </select>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="question">Question</label>
        <textarea class="form-control" id="question" name="question">{{course.question}}</textarea>
      </div>
      <div class="form-group">
        <label for="answer">Answer</label>
        <textarea class="form-control" id="answer" name="answer">{{course.answer}}</textarea>
      </div>
      <div class="form-group">
        <label for="audio">Audio</label>
        <select class="form-control" class="form-control" id="audio" name="audio">
          <option value=""></option>
          {{#each mp3s}}
            <option value={{mp3}} {{#if (eq mp3 ../course.audio)}}selected{{/if}}>{{mp3}}</option>
          {{/each}}
        </select>
        <small>Must be an .mp3 manually uploaded to <code>static/images/courses</code> folder.</small>
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        <select class="form-control" data-course-image id="image" name="image">
          <option value=""></option>
          {{#each images}}
            <option value={{image}} {{#if (eq image ../course.image)}}selected{{/if}}>{{image}}</option>
          {{/each}}
        </select>
        <small>Must be a .gif, .jpg, or .png manually uploaded to <code>static/images/courses</code> folder.</small>
        <div data-preview-image>
          {{#if course.image}}
            <img class="mt-3" src="/images/courses/{{course.image}}" alt="">
          {{/if}}
        </div>
      </div>
      <div class="form-group">
        <label for="video">Video</label>
        <input class="form-control" id="video" name="video" type="text" value="{{course.video}}">
        <small>Must be a YouTube embed URL. e.g. https://www.youtube.com/embed/n2z02J4fJwg?enablejsapi=1</small>
      </div>
    </div>
    <div class="col-md-12">
      <div class="mt-4">
        <button class="btn btn-primary jcr-btn jcr-btn--primary" type="submit">
          {{button}}
        </button>
      </div>
    </div>
  <div>
</form>
